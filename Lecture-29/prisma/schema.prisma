generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String
  tweet Tweet[]
}

model Tweet {
  id Int @id @default(autoincrement())
  content String
  userId Int 
/* Here, 'userId' becomes the foreign key in the Tweet model that references the 'id' primary key of the User model. 
'fields' lists foreign key columns in this model, and 'references' lists the columns in the related model that they point to. */ 
  user User @relation(fields: [userId], references: [id])
}